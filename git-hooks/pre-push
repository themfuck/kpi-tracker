#!/bin/bash

# Git Pre-push Hook
# Place this file in: .git/hooks/pre-push
# Make it executable: chmod +x .git/hooks/pre-push

# Configuration
REMOTE_NAME="production"  # Name of your production remote
BRANCH="main"            # Branch that triggers deployment
DEPLOY_ENDPOINT="https://your-domain.com/deploy-webhook.php"  # Your webhook endpoint

# Colors
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
RED='\033[0;31m'
NC='\033[0m'

echo -e "${YELLOW}üîç Pre-push hook activated...${NC}"

# Read push information
while read local_ref local_sha remote_ref remote_sha; do
    # Extract branch name
    branch=$(echo $remote_ref | sed 's/refs\/heads\///')
    
    # Check if pushing to main branch and production remote
    if [ "$branch" = "$BRANCH" ] && [ "$1" = "$REMOTE_NAME" ]; then
        echo -e "${YELLOW}‚ö†Ô∏è  You are pushing to production branch: $branch${NC}"
        echo -e "${YELLOW}üì° This will trigger automatic deployment!${NC}"
        
        # Ask for confirmation
        read -p "Continue with deployment? (y/N): " -n 1 -r
        echo
        
        if [[ ! $REPLY =~ ^[Yy]$ ]]; then
            echo -e "${RED}‚ùå Push cancelled by user${NC}"
            exit 1
        fi
        
        echo -e "${GREEN}‚úÖ Push approved. Deployment will be triggered.${NC}"
        
        # Optional: Run tests before push
        echo -e "${YELLOW}üß™ Running pre-deployment checks...${NC}"
        
        # Check if Docker is running
        if ! docker info >/dev/null 2>&1; then
            echo -e "${RED}‚ùå Docker is not running${NC}"
            exit 1
        fi
        
        # Check if docker-compose.yml exists
        if [ ! -f "docker-compose.yml" ]; then
            echo -e "${RED}‚ùå docker-compose.yml not found${NC}"
            exit 1
        fi
        
        # Optional: Test build locally first
        echo -e "${YELLOW}üî® Testing build locally...${NC}"
        if ! docker compose config >/dev/null 2>&1; then
            echo -e "${RED}‚ùå Docker compose configuration is invalid${NC}"
            exit 1
        fi
        
        echo -e "${GREEN}‚úÖ Pre-deployment checks passed${NC}"
    fi
done

exit 0